<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Career"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/rlDisplayNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameofplace"
            android:src="@drawable/sng_result_gold"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="NHL"
            android:textStyle="bold"
            android:textSize="25dp"
            android:paddingTop="15dp"
            android:layout_centerInParent="true"
            android:textColor="@color/whiteicon"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlDisplayNavigation"
        android:id="@+id/llTabLayout"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:id="@+id/txtVItem"
            android:background="@color/colorYellowDark"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:id="@+id/txtVDiamond"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:gravity="center"
            android:padding="5dp"

            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTabLayout"
        android:id="@+id/rlCareerData">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/career_data"
            android:foregroundGravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/colorRed"
            android:textAlignment="center"
            android:textSize="30sp"
            android:paddingTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VPIP"
            android:textColor="@color/colorGreayDark"
            android:textAlignment="center"
            android:textSize="15sp"
            android:paddingTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/colorBlue"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingTop="95dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PFR"
            android:textColor="@color/colorGreayDark"
            android:textAlignment="center"
            android:textSize="15sp"
            android:paddingTop="120dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlCareerData"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/UpperText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:textColor="@color/colorOrange" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_bar2"
            android:id="@+id/Bar2"/>
        </LinearLayout>



    </RelativeLayout>
</RelativeLayout>